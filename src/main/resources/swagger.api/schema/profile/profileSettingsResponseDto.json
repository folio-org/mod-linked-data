{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Workspace custom profile settings response DTO",
  "allOf": [
    {
      "$ref": "profileSettings.json"
    },
    {
      "type": "object",
      "properties": {
        "profileId": {
          "type": "integer",
          "format": "int16",
          "description": "ID of the profile"
        },
        "drift": {
          "type": "object",
          "description": "Drift detection between profiles and settings",
          "properties": {
            "missingFromProfile": {
              "type": "array",
              "description": "A set of profile components listed in settings but not present in the profile",
              "items": {
                "type": "string"
              }
            },
            "missingFromSettings": {
              "type": "array",
              "description": "A set of profile components listed in the profile but not present in settings",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": [
        "profileId",
        "drift"
      ]
    }
  ]
}
