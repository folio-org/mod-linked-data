{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ResourceSubgraph",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "ID of the resource"
    },
    "doc": {
      "type": "object",
      "description": "Dictionary of properties and their values (array of strings)",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "label": {
      "type": "string",
      "description": "Label for the resource"
    },
    "types": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Array of type URIs for the resource"
    },
    "outgoingEdges": {
      "type": "object",
      "description": "Dictionary of outgoing edges (property URI to array of ResourceSubgraph)",
      "additionalProperties": {
        "type": "array",
        "items": { "$ref": "#/" }
      }
    }
  },
  "required": ["id", "doc", "label", "types", "outgoingEdges"],
  "additionalProperties": false
}

